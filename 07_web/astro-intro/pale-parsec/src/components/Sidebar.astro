---
import Infobox from "./Infobox.astro";
interface Props {
    
}

const {} = Astro.props;
---

<div class="container">
    <div class="row">
        <a href="#">
            <img src="../../public/icons/library-icon-filled.svg" alt="">
            <p>Your Library</p>
        </a>
        <a href="#">
            <img src="../../public/icons/create-icon.svg" alt="">
        </a>
    </div>

    <slot />

    <div class="small-text-area">
        <a href="#">Legal</a>
        <a href="#">Privacy Center</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Cookie Settings</a>
        <a href="#">About Ads</a>
        <a href="#">Accesibility</a>
        <a href="#">Cookies</a>
    </div>
    <div class="row">
        <button class="language-selector">
            <img src="../../public/icons/globe-icon.svg" alt="">

            English
        </button>
    </div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 230px;
        margin: 10px;
        min-height: 600px;
        background-color: rgb(17, 17, 17);
        padding: 24px;
        border-radius: 15px;
    }
    .row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        height: 30px;
        margin: 10px 0;
    }
    .row a:nth-child(1) {
        width: 70%;
        display: flex;
        justify-content: space-evenly;
        gap: 10px;
        align-items: center;
        text-decoration: none;
        color: white;
        opacity: 0.7;
        transition: all 400ms ease;
    }
    .row a:nth-child(1):hover {
        opacity: 1;
    }
    .small-text-area {
        display: flex;
        flex-wrap: wrap;
    }
    .small-text-area a {
        padding: 5px;
        margin: 5px;
        font-size: 0.8rem;
        color: grey;
        text-decoration: none;
    }
    .language-selector {
        display: flex;
        align-items: center;
        gap: 8px;
        background-color: inherit;
        padding: 8px 10px;
        border-width: 0.5px;
        border-radius: 1rem;
        color: white;
        cursor: pointer;
        font-weight: 500;
    }


</style>