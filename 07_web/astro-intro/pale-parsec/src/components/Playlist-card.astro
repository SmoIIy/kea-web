---
interface Props {
    title: string;
    desc: string;
    href: string;
    image: string;
}
    const {href, title, desc, image} = Astro.props;

---



<a class="playlist-card" href={href}>
    <img src={image} alt="" class="playlist-card-image">
    <h3 class="playlist-card-title">
        {title}
    </h3>
    <p class="playlist-card-desc">
        {desc}
    </p>
</a>

<style>
    .playlist-card{
        display: flex;
        flex-direction: column;
        align-items: left;
        justify-content: space-evenly;
        gap: 0;
        margin: 0;
        height: 250px;
        aspect-ratio: 10/16;
        background-color: rgb(20, 20, 20);
        padding: 35px 25px;
        border-radius: 10px;
        text-decoration: none;
        color: white;
        transition: all 200ms ease;
        
    }
    .playlist-card:hover {
        background-color: rgb(40, 40, 40);
    }
    .playlist-card-image {
        border-radius: 6px;
        aspect-ratio: 1/1;
        object-fit: cover;
        box-shadow: 3px 3px 12px rgba(0, 0, 0, 0.208);

    }
    .playlist-card-desc {
        color: rgb(197, 197, 197);
    }

    
</style>