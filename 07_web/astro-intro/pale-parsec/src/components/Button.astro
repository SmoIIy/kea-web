---    
interface Props {
    body: string;
    href: string;
}
const {body, href} = Astro.props;
---

<a href={href}>{body}</a>

<style>
    a {
        max-width: 8rem;
        text-decoration: none;
        color: black;
        background-color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 1rem;
        text-align: center;
    }

</style>