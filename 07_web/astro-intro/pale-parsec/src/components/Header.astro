---

import Button from "./Button.astro";
interface Props {
    hasSearch?: boolean;
}
const { hasSearch } = Astro.props;

---



<div class="container">

    <div class="column" id="column-left">
        <a href="#">
            <img src="../../public/icons/back-btn.svg" alt="">
        </a>
        <a href="#">
            <img src="../../public/icons/forward-btn.svg" alt="">
        </a>
    </div>
    {hasSearch && <input type="text" placeholder="Search.." />}
    <div class="column">
        <a href="">Sign up</a>
        <slot />
    </div>
</div>

<style>
    .container {
        display: flex;
        width: 96%;
        background-color: rgb(17, 17, 17);
        align-items: center;
        justify-content: space-between;
        margin: 10px;
        height: 40px;
        padding: 20px;
        border-radius: 15px;
    }
    .column {
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 200px;
        margin: 10px;

    }
    .column a{
        color: white;
        opacity: 0.7;
        text-decoration: none;
    }
    #column-left {
        width: 60px;
    }
    #column-left a {
        display: flex;
        align-items: center;
        width: 15px;
        aspect-ratio: 1/1;
        background-color: black;
        border-radius: 50%;
        padding: 10px;
        margin: 0 8px;
    }
    input {
        padding: 5px;
        border-radius: 25px;
    }
</style>